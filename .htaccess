

<IfMOdule mod_rewrite.c>

<IfModule mod_security.c>
SecFilterEngine Off
SecFilterScanPOST Off
</IfModule>
 RewriteEngine On


    # Redirect All Requests To The Subfolder
    RewriteRule ^(.*)$ public/$1 [L]

    RewriteCond %{HTTPS} off
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}

</IfMOdule>


